{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictFunctionTypes": false,
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules"
  ]
}